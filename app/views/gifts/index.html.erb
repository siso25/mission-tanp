      <div class="center-content">
        <% @ranking_categories.each do |ranking_category| %>
          <div class="center-content-section">
            <h3 class="center-content-title"><%= ranking_category.category_name %></h3>
            <div class="center-content-item">
                <% @ranking_orders.select { |ranking_order| ranking_order.category_id == ranking_category.category_id }.each_with_index do |ranking_order, i| %>
                  <% if i % 3 == 0 %>
                    <div class="center-products">
                  <% end %>
                      <div class="center-products-item">
                        <a href="/gifts/2" class="product-item-link">
                          <%= image_tag(ranking_order.gift.image_file_path) %>
                          <p class="product-category"><%= ranking_order.gift.category_name %></p>
                          <p class="product-title"><%= ranking_order.gift.name %></p>
                          <p class="product-price">￥<%= ranking_order.gift.price.floor.to_s(:delimited, delimiter: ',') %></p>
                        </a>
                      </div>
                  <% if i % 3 == 2 %>
                    </div>
                  <% end %>
                <% end %>
            </div>
          </div>
        <% end %>
